.i-card {
  margin: 20px 16px;
  font-size: 12px;
  overflow: hidden;
  position: relative;
  background: #fff;
  border: 1rpx solid #dddee1;
  border-radius: 5px;
  border-color: #FFF;
  border-width: 3rpx;
  box-shadow:5rpx 5rpx 5rpx 5rpx #D3D3D3
}
 
.i-card-full {
  margin: 0;
  border-left: none;
  border-right: none;
  border-radius: 0;
}

.i-card-header {
  display: flex;
  padding: 6px 16px;
  align-items: center;
}

.i-card-header-content {
  flex: 1;
  text-align: left;
  /* background-color: #72afd3; */
}

.i-card-header-thumb {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  background-size: cover;
  vertical-align: middle;
  border-radius: 50%;
}

.i-card-header-title {
  font-size: 10px;
  display: inline-block;
  vertical-align: middle;
   color: #1c2438; 
}

.i-card-header-extra {
  flex: 1;
  text-align: right;
  font-size: 10px;
  color: #80848f;
}

.i-card-body {
  position: relative;
  padding: 6px 16px;
  color: #fff;
  font-size: 14px;
  /* background-color: #72afd3, #37ecba */
   /* background: linear-gradient(to right, #72afd3 ,#37ecba); */
  background-image: linear-gradient(to right,  #009efd,#2af598);
}

.i-card-body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px;
  
}

.i-card-footer {
  position: relative;
  padding: 6px 16px;
  color: #80848f;
  font-size: 12px;
  background-image: linear-gradient(to right,  #009efd ,#2af598);
}

.title{
  font-size: 14px;
  margin-left: 10rpx;
  color: gray;
}