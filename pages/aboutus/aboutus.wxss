@import "/style/textStyle.wxss";

.page_main{
  height:1100rpx;
}

.weui-footer__text{
  width: 100%;
  position: fixed;
  bottom: 30rpx;
  color: gray;
  text-align: center;
}

.scroll_box {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
}

.item_list {
  width: 500rpx;
  height: 809rpx;
  margin: 60rpx 20rpx 60rpx 6.5%;
  border-radius: 1.5%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5);
  display: inline-flex;
  flex-direction: column;
  overflow: hidden;
}

.item_list:last-child {
  margin-right: 6.5%;
}

.item_list image {
  width: 100%;
  height: 500rpx;
}

.item_list_buttom {
  flex: 1;
  padding: 20rpx 46rpx;
  background-color: #fff;
}

.item_list_buttom_text {
  white-space: normal;
  margin-top: 20rpx;
}

.item_list_buttom_foot {
  text-align: right;
  color: rgba(0, 0, 0, 0.5);
}

