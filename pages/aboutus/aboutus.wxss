::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: white;
}

.footImage {
  position: fixed;
  bottom:0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background-size: 110%;
  background-repeat:no-repeat;
  background-position: center;
}
