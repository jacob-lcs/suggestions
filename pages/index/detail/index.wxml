<view class="page">
  <view class="page__bd">
    <view class="weui-article">
      <view class="weui-article__section">
        <view class="weui-article__section">
           <view class="weui-article__p">
            {{rows[0].content}}
          </view> 
          <view class="weui-article__h3">创建时间：{{rows[0].createdAt}} </view>
          <view class="weui-article__h3">发布者：{{rows[0].writer}} </view>
